<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/orderIdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order ID: 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/orderCustomerNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Name: John Doe"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/orderDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Date: 2024-12-20"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/orderTotalPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Price: $99.99"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/orderStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: PENDING"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/statusSpinner"
        android:layout_width="380dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/confirmStatusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Confirm" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderSummatyProductsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical" />
</LinearLayout>